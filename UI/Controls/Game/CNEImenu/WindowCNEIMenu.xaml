                                                             ItemsSource="{Binding EntityVMList}"
                                                             MaxWidth="400"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </HierarchicalDataTemplate.Triggers>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>-->

            </Grid>

            <Grid x:Name="SettingsGrid"
                  Grid.Row="1"
                  Grid.Column="1">
                <Grid.Style>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=SettingsButton}"
                                         Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <StackPanel Orientation="Vertical">
                    <!--<GroupBox Header="View Type">
                        <StackPanel>
                            <RadioButton GroupName="ViewType" x:Name="ViewTypeSimpleList"
                                         Content="Simple list" IsChecked="True"/>
                            <RadioButton GroupName="ViewType" x:Name="ViewTypeGroup"
                                         Content="Group by baseType"/>
                            <CheckBox x:Name="ShowGroupName"
                                      Content="Show group name"
                                      IsChecked="True"
                                      Margin="10,0,0,0"
                                      IsEnabled="{Binding IsChecked, ElementName=ViewTypeGroup}"/>
                        </StackPanel>
                    </GroupBox>-->
                    <GroupBox Header="Content">
                        <StackPanel>
                            <CheckBox x:Name="ShowItems"
                                      Content="Show items"
                                      IsChecked="{Binding IsShowingItems}"/>
                            <CheckBox x:Name="ShowStructures"
                                      Content="Show structures"
                                      IsChecked="{Binding IsShowingStructures}"/>
                            <CheckBox x:Name="ShowMobs"
                                      Content="Show mobs"
                                      IsChecked="{Binding IsShowingMobs}"/>
                            <CheckBox x:Name="ShowEntityWithTemplates"
                                      Content="Show entity with templates"
                                      IsChecked="{Binding IsShowingEntityWithTemplates}"/>
                            <CheckBox x:Name="ShowAllEntity"
                                      IsChecked="{Binding IsShowingAll}">
                                <CheckBox.Content>
                                    <TextBlock>
                                        <Run>Show all entity </Run>
                                        <Run Foreground="Red">(only for development use)</Run>
                                    </TextBlock>
                                </CheckBox.Content>
                            </CheckBox>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>

            <ContentControl Template="{StaticResource SidePanelTemplate}"
                            Visibility="{Binding IsCreativePanelVisibile, 
                                         Converter={StaticResource BoolToVisibilityConverter}}"
                            Grid.Row="0" Grid.RowSpan="2"
                            Grid.Column="0">
                <cnei:CreativePanel />
            </ContentControl>
        </Grid>

    </core:GameWindow>

</core:BaseWindowMenu>