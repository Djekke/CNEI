<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="clr-namespace:AtomicTorch.CBND.CNEI.UI.Controls.Game.CNEI.Data"
    xmlns:base="clr-namespace:AtomicTorch.GameEngine.Common.Client.MonoGame.UI;assembly=AtomicTorch.CBND.GameApi.WPF.Stubs">

    <!-- Preview in list -->
    <DataTemplate DataType="{x:Type data:ProtoEntityViewModel}">
        <Border>
            <!-- Icon -->
            <Rectangle Fill="{Binding Icon}" Width="32" Height="32" />
            <!-- Tooltip -->
            <base:ToolTipServiceExtend.ToolTip>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                    <TextBlock Text="{Binding Type}" FontWeight="Bold" />
                </StackPanel>
            </base:ToolTipServiceExtend.ToolTip>
        </Border>
    </DataTemplate>

    <!-- Detail info -->

</ResourceDictionary>